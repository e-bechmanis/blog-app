<div class="row">
<div class="col-md-12">
<h2>Categories <a href="/categories/add" class="btn btn-outline-success float-end">Add Category</a></h2>
<hr />
<div class="table-responsive">
    <table class="table">
        <thead>
          <tr>
            <th>Category ID</th>
            <th>Category Name</th>
          </tr>
        </thead>
        <tbody>
          {{#each categories}}
            <tr>
              <td>{{id}}</td>
              <td><a href="/posts?category={{id}}">{{category}}</a></td>
              <td><a class="btn btn-outline-danger float-end" href="/categories/delete/{{id}}"><i class="bi bi-trash"></i>&nbsp;&nbsp;remove</a></td>
            </tr>
          {{/each}}
        </tbody>
      </table>
</div>
</div>
{{#unless categories}}
      <div class="col-md-12 text-center">
        <strong>{{message}}</strong>
      </div>
{{/unless}}
</div>
